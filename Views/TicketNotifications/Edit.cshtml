@model Kanopy.Models.TicketNotification

<div class="content-wrapper bg-gradient-gray-dark">
    <div class="container">

        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-white">Notifications</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="~/Home/Index">Notifications</a></li>
                            <li class="breadcrumb-item active text-white">@Model.Ticket.Title</li>
                        </ol>
                    </div>
                </div><!-- /.row -->

            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <div class="row" style="padding-bottom:20px">
            <div class="col-lg-10 offset-1">

                <div class="card">
                    <div class="card-header" style="color:black">
                        <h2 class="card-title">
                            Ticket Notification
                        </h2>
                    </div><!-- /.card-header -->
                    <div class="card-body bg-cyan">
                        <div class="tab-content p-0">
                            <div class="chart tab-pane active overflow-auto" id="local-login"
                                 style="position: relative; height: 450px;">
                                <div class="form-group">

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                                            <h4>TicketNotification</h4>
                                            <hr />
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.Id)

                                            <div class="form-group">
                                                <label style="padding-left:10px">Ticket</label>
                                                <div class="col-md-12">
                                                    @Model.Ticket.Title
                                                    @Html.ValidationMessageFor(model => model.TicketId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label style="padding-left:10px">Sender</label>
                                                <div class="col-md-12">
                                                    @Model.Sender.FirstName
                                                    @*@Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })*@
                                                    @*@Html.ValidationMessageFor(model => model.SenderId, "", new { @class = "text-danger" })*@
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label style="padding-left:10px">Ticket</label>
                                                <div class="col-md-12">
                                                    @Model.NotificationBody
                                                    @*@Html.ValidationMessageFor(model => model.TicketId, "", new { @class = "text-danger" })*@
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label style="padding-left:10px">Has Been Read</label>
                                                <div class="col-md-10">
                                                    <div class="checkbox">
                                                        @Html.EditorFor(model => model.HasBeenRead)
                                                        @Html.ValidationMessageFor(model => model.HasBeenRead, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Save" class="btn btn-default" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>

